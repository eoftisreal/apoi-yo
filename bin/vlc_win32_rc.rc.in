#define VERSION_NUMBER @VERSION_MAJOR@,@VERSION_MINOR@,@VERSION_REVISION@,@VERSION_EXTRA@
#define VERSION_NUMBER_STR "@VERSION_MAJOR@,@VERSION_MINOR@,@VERSION_REVISION@,@VERSION_EXTRA@"

#include <winuser.h>

APOI_ICON ICON "vlc.ico"

1 VERSIONINFO
FILETYPE 1
FILEOS 4
PRODUCTVERSION VERSION_NUMBER
FILEVERSION VERSION_NUMBER
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
    BEGIN
      VALUE "CompanyName", "Apoi"
      VALUE "ProductName", "Apoi media player"
      VALUE "ProductVersion", VERSION_NUMBER_STR
      VALUE "InternalName", "apoi"
      VALUE "OriginalFilename", "apoi.exe"
      VALUE "FileVersion", "@VERSION@"
      VALUE "FileDescription", "Apoi media player"
      VALUE "LegalCopyright", "Copyright \251 @COPYRIGHT_YEARS@ Apoi Authors"
      VALUE "LegalTrademarks", "Apoi media player"
    END
  END
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 1252
  END
END

CREATEPROCESS_MANIFEST_RESOURCE_ID RT_MANIFEST "apoi.exe.manifest"
